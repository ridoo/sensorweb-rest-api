<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans.ext">
    <class name="org.n52.series.db.beans.SamplingGeometryEntity" table="observation">
        <id name="timestamp" type="iso_string">
            <column name="phenomenontime"/>
            <generator class="assigned"/>
        </id>
        <property column="lat" name="lat" type="double" />
        <property column="lon" name="lon" type="double" />
        <property column="seriesid" name="seriesPkid" type="long"/>
    </class>
</hibernate-mapping>
